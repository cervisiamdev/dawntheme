{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": false,
    "skipLibCheck": true,
    "lib": [ "dom", "DOM.Iterable" ]
  },
  "lib": [ "dom" ],
  "experimentalDecorators": true,
  "include": [
    "components/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
